pealinnad = ["Tallinn", "Riia", "Vilnius", "Helsinki", "Stockholm",
             "Oslo", "Kopenhaagen", "London", "Pariis", "Berliin"]

for linn in pealinnad:
    print(linn)

pealinnad.sort()
print("Sorteeritud:", pealinnad)

uus1 = input("Lisa uus pealinn: ")
uus2 = input("Lisa teine pealinn: ")
pealinnad.append(uus1)
pealinnad.append(uus2)
pealinnad.sort()

for i in range(len(pealinnad)):
    print(i+1, "-", pealinnad[i])

print(f"Meie loendis on {len(pealinnad)}", "Euroopa pealinna.")



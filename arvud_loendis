from random import *

def vahetus(a,b): #vajab a,b
    abi=a
    a=b
    b=abi
    return a,b

def generaator(n,loend,a,b):
    for i in range (n):
        loend.append(randint(a,b))


def jagamine(loend:list,p:list,n,nol):
    for el in loend:
        if el>0:
            p.append(el)
        elif el<0:
            n.append(el)
        else:
            nol.append(el)

def keskmine(loend):
    n=len(loend)
    if n==0:
        kesk=0
    else:
        sum=0
        for i in loend:
            sum+=i
        kesk=round(sum/n,2)
    return kesk

def lisamine(loend,el):
    loend.append(el)
    loend.sort()



from random import *
